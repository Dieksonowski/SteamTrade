<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:longClickable="true"
              android:minWidth="100dip">

    <TextView
        android:id="@+id/chat_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left|top"
        android:autoLink="web"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/abc_primary_text_material_light"
        android:background="@drawable/bg_chat_bubble_right"
        android:layout_alignParentRight="true"
        android:paddingLeft="5dip"
        android:paddingRight="20dip"
        android:paddingTop="5dip"
        android:paddingBottom="25dip"
        android:layout_marginLeft="50dip"
        android:minWidth="200dip"
        android:textColorLink="@color/abc_secondary_text_material_light"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="8:30 PM"
        android:id="@+id/chat_timestamp"
        android:layout_alignBottom="@+id/chat_message"
        android:layout_alignLeft="@+id/chat_message"
        android:layout_marginLeft="5dip"
        android:layout_marginBottom="5dip"
        android:textColor="@color/abc_primary_text_material_light"
        android:textStyle="italic"/>

</RelativeLayout>